#include <iostream>
#include <ctime>
#include <cstdlib>

using namespace std;

class DeckOfCards
{ 
	public:
		DeckOfCards(){}
		void dealCard();
		void shuffle();
	
	private:
		int shuffled[52];
		int nextcard;
	
};

int main()
{
	
}
DeckOfCards()
{
	for(int i = 0; i< 52; i++)
	{
		shuffled[i] = i;
	}
	
	DeckOfCards.shuffle();
	
}
void DeckOfCards::dealCard
{
	for(int i = 0; i < 52; i++)
	{
		shuffled[i]
	}
	
}

void DeckOfCards::shuffle()
{
	for(int i = 51; i >= 1; i--)
	{
		for(int j = 51; j >= 1; j--)
		{
			shuffled[j] = rand % 52;
		}
		shuffled[i] = shuffled[j];
	}
}
